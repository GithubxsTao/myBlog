<%- include header %>

<div class="blog col-md-8 col-md-offset-1 col-xs-12">
	<% posts.forEach(function(post,index){ %>
		<div class="posts">
			<p>
			<h3><a href="/p/<%= post._id %>"><%= post.title%></a></h3>
			<!-- <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="l_head" /></a> -->
			
				<% if (post.reprint_info && post.reprint_info.reprint_from) { %>
					<p class="info">
					<a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a> 			
					</p>									
				<% } %>

			<P class="info">
			作者： <a href="/u/<%= decodeURIComponent(post.name) %>"><%= post.name %></a> |
			日期：<%= post.time.minute %>
			|
			标签：
			<% if(post.tags){ %> 
				<% post.tags.forEach(function(tag,index){ %>
					<% if(tag.tag){ %>
						<a class="tag" href="/tags/<%= encodeURIComponent(tag.tag) %>"><%= tag.tag %></a>
					<% } %>
				<% }) %>
			<% } %>
			</P>
			<p class="info">
				阅读： <%= post.pv %> |
				评论： <%= post.comments.length %> |				
			</p>
		</p>
		<%- post.content %>
		</div>
	<% }) %>
	<%- include paging %>
</div>
<div class="col-md-3 col-xs-10">
	<div class=" col-xs-12">
		<%- include category %>
	</div>
	<div class="col-xs-12">
		<%- include hotblog %>
	</div>
</div>
<%- include footer %>